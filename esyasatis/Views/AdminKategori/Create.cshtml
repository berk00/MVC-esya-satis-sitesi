@*@using esyasatis.Entities
@model List<kategori>*@
@model esyasatis.Entities.kategori




@{
    ViewBag.Title = "Create";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn*danger" })

                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" class="form-control" name="ad" />
                    @Html.ValidationMessageFor(x => x.ad, "", new { @style = "color:red" })


                </div>

                <br />

                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" name="kategori_isim" />
                    @Html.ValidationMessageFor(x => x.kategori_isim, "", new { @style = "color:red" })


                </div>
                <br />
                <button class="btn btn-primary" type="submit">Ekle</button>

            </form>




        </div>
    </div>
</div>
