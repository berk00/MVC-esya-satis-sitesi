@model esyasatis.Entities.Urun




@{
    ViewBag.Title = "Create";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn*danger" })

                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" class="form-control" name="ad" />
                    @Html.ValidationMessageFor(x => x.UrunAd, "", new { @style = "color:red" })


                </div>

                <br />

                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" name="Aciklama" />
                    @Html.ValidationMessageFor(x => x.Aciklama, "", new { @style = "color:red" })


                </div>
                <br />

                <br />

                <div class="form-group">
                    <label>Resim</label>
                    <input type="text" class="form-control" name="resim" />
                    @Html.ValidationMessageFor(x => x.resim, "", new { @style = "color:red" })


                </div>
                <br />
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" class="form-control" name="Fiyat" />
                    @Html.ValidationMessageFor(x => x.Fiyat, "", new { @style = "color:red" })


                </div>
                <br />
                <div class="form-group">
                    <label>Stok</label>
                    <input type="text" class="form-control" name="Stok" />
                    @Html.ValidationMessageFor(x => x.Stok, "", new { @style = "color:red" })


                </div>
                <br />
                <div class="form-group">
                    <label>Onay</label>
                
                    @Html.EditorFor(x => x.Onay)
                    @Html.ValidationMessageFor(x => x.Onay, "", new { @style = "color:red" })


                </div>
                <br />
                <div class="form-group">
                    <label>Kategori</label>

                    @Html.LabelFor(x => x.kategori.ID)
                    @Html.TextBoxFor(x => x.kategoriID, new { @class = "form-control" })
                    @*@Html.DropDownListFor(x => x.kategoriID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })*@

                    @*@Html.LabelFor(x => x.kategori.ID)
        @Html.DropDownListFor(x => x.kategoriID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })*@



                </div>
                <br />

                <button class="btn btn-primary" type="submit">Ekle</button>
                <a href="~/Urun/Index/" class="btn btn-primary">Ürün Listesi</a>

            </form>




        </div>
    </div>
</div>
